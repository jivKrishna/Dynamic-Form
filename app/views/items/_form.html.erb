<div class="container">
  <%= form_for @item do |f| %>
    <div class="modal-body">
      <%= render partial: "shared/form_errors", locals: { model: @item } %>

      <div class="form-group">
        <%= f.label :name, "Item Name" %>
        <%= f.text_field :name, required: true, class: "form-control", placeholder: "Item Name", autocomplete: :off, maxlength: 255 %>
      </div>

      <div class="form-group">
        <%= f.label :price, "Price" %>
        <%= f.text_field :price, required: true, class: "form-control", placeholder: "Price", autocomplete: :off %>
      </div>
      <%= f.fields_for :variants do |f| %>
        <%= render 'variant_fields', f: f %>
      <% end %>

      <%= link_to_add_fields 'Add Product Variant', f, :variants %>

    </div>
    <%= f.submit "create", class: "btn btn-primary" %>
  <% end %>
</div>