<div class="content-body__header clearfix">
  <h3 class="d-inline-block mb-0">Products</h3>
  <%= link_to 'Add new item', new_item_path, class: "float-right btn btn-primary", title: "Add new item" %>
</div>

<div class="table-responsive master-list">
  <table class="table table-hover text-center">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Name</th>
        <th scope="col">Price</th>
      </tr>
    </thead>

    <tbody>
      <% @items.each.with_index(1) do |item, index| %>
        <tr>
          <th scope="row"><%= index %></th>
          <td><%= item.name %></td>
          <td><%= item.price %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= render "shared/form_modal" %>
